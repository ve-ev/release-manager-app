{
  "name": "release-manager-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p tsconfig.app.json && vite build && youtrack-app validate dist",
    "lint": "eslint --report-unused-disable-directives --max-warnings 0",
